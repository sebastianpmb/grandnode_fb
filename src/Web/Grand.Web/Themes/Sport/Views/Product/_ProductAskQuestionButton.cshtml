@model ProductDetailsModel
@if (Model.AskQuestionEnabled)
{
        <b-button type="button" variant="outline-secondary" value="@Loc["Products.AskQuestion"]" class="ask-a-question-button mr-1" onclick="location = ('@Url.RouteUrl("AskQuestion", new { productId = Model.Id })')" v-b-tooltip.hover.bottom title="@Loc["Products.AskQuestion"]">
            <span class="icons icon-question"></span>
            <span class="sr-only">@Loc["Products.AskQuestion"]</span>
        </b-button>
}