@inject IWorkContext workContext
@inject IPageHeadBuilder pagebuilder
@model ShoppingCartModel
@{
    Layout = "_SingleColumn";

    var supportRtl = workContext.WorkingLanguage.Rtl;
    if (supportRtl)
    {
        <link rel="stylesheet" type="text/css" asp-src="/Themes/Sport/Content/css/cart/cart.rtl.css">
    }
    else
    {
        <link rel="stylesheet" type="text/css" asp-src="/Themes/Sport/Content/css/cart/cart.css">
    }

    //title
    pagebuilder.AddTitleParts(Loc["Title.ShoppingCart"]);
}
<div class="page shopping-cart-page">
    <h2 class="generalTitle text-center mt-3">@Loc["ShoppingCart"]</h2>
    <div class="page-body">
        <partial name="CartSummary" model="Model" />
    </div>
</div>
