<template v-if="hpi.HomePageItems[0].CategoryFeaturedProducts.loading">
    <b-col cols="12" class="mt-3 px-0">
        <div class="item-row">
            <b-col xl="3" lg="3" md="4" sm="6" cols="6">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
            <b-col xl="3" lg="3" md="4" sm="6" cols="6">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
            <b-col xl="6" lg="6" md="4" sm="6" cols="6" class="d-md-block d-none">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
        </div>
    </b-col>
</template>
<div v-else-if="hpi.HomePageItems[0].CategoryFeaturedProducts.items[0] !== undefined" id="CategoryFeaturedProducts" class="section">
    <div class="featured-product-grid">
        <b-col cols="12" class="px-0">
            <b-col xl="12" lg="12" cols="12" v-for="(Category, index) in hpi.HomePageItems[0].CategoryFeaturedProducts.items" class="category-container px-0">
                <div class="row">
                    <b-col xl="5" lg="6" md="6" cols="12" class="category-product">
                        <template v-if="Category.UserFields.find(function(key){if(key.Key == 'homeSlider') return true})">
                            <swiper :ref="'CategoryFeaturedProducts' + index" class="o-visible" :options="hpi.HomePageItems[0].CategoryFeaturedProducts.swiperOptions">
                                <swiper-slide v-for="Model in Category.FeaturedProducts">
                                    <partial name="_ProductBoxVueSwiper" />
                                </swiper-slide>
                            </swiper>
                        </template>
                        <template v-else>
                            <div class="item-row">
                                <b-col xl="6" lg="6" md="6" sm="6" cols="6" v-for="Model in Category.FeaturedProducts">
                                    <partial name="_ProductBoxVue" />
                                </b-col>
                            </div>
                        </template>
                    </b-col>
                    <b-col xl="7" lg="6" md="6" sm="6" cols="12" class="category-image">
                        <a :href="'/' + Category.SeName">
                            <img :src="Category.PictureModel.FullSizeImageUrl" class="img-fluid" />
                            <span class="content">
                                <span class="title">
                                    {{Category.Name}}
                                </span>
                                <template v-if="Category.Description != null">
                                    <span class="desc" v-html="Category.Description"></span>
                                </template>
                            </span>
                        </a>
                    </b-col>
                </div>
            </b-col>
        </b-col>
    </div>
</div>