<template v-if="hpi.HomePageItems[0].CustomerRecommendedProducts.loading">

</template>
<b-tab v-else-if="hpi.HomePageItems[0].CustomerRecommendedProducts.items[0] !== undefined" class="section" title="@Loc["HomePage.Recommended.Products"]">
    <div id="CustomerRecommendedProducts">
        <div class="product-grid">
            <b-col cols="12" class="px-0">
                <div class="item-row">
                    <b-col xl="3" lg="4" md="4" sm="6" cols="6" v-for="Model in hpi.HomePageItems[0].CustomerRecommendedProducts.items.slice(0,hpi.HomePageItems[0].CustomerRecommendedProducts.ProductsToShow)" class="col-for-5-xl product-container mb-2">
                        <partial name="_ProductBoxVue" />
                    </b-col>
                </div>
                <div class="w-100 text-center" v-if="hpi.HomePageItems[0].CustomerRecommendedProducts.ProductsToShow >= 4">
                    <b-button class="show-more-button" variant="outline-secondary" data-nomore="@Loc["Sport.nomore.products"]" @@click="hpi.loadMore($event, hpi.HomePageItems[0].CustomerRecommendedProducts.NumberOfProducts, hpi.HomePageItems[0].CustomerRecommendedProducts)">Show More</b-button>
                </div>
            </b-col>
        </div>
    </div>
</b-tab>