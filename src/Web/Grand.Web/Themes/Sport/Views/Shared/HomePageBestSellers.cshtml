<template v-if="hpi.HomePageItems[0].HomePageBestSellers.loading">
    <b-col cols="12" class="mt-3 px-0">
        <div class="item-row">
            <b-col xl="3" lg="3" md="4" sm="6" cols="6">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
            <b-col xl="3" lg="3" md="4" sm="6" cols="6">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
            <b-col xl="3" lg="3" md="4" sm="6" cols="6" class="d-md-block d-none">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
        </div>
    </b-col>
</template>
<template v-else-if="hpi.HomePageItems[0].HomePageBestSellers.items[0] !== undefined" class="section">
    <div id="HomePageBestSellers">
        <div class="product-grid bestsellers">
            <b-col cols="12" class="bestsellers-container">
                <swiper data-title="@Loc["Bestsellers"]" ref="HomePageBestSellers" :options="hpi.HomePageItems[0].HomePageBestSellers.swiperOptions">
                    <swiper-slide v-for="Model in hpi.HomePageItems[0].HomePageBestSellers.items">
                        <partial name="_ProductBoxSlideVue" />
                    </swiper-slide>
                    <div class="swiper-button-prev" slot="button-prev"></div>
                    <div class="swiper-button-next" slot="button-next"></div>
                </swiper>
            </b-col>
        </div>
    </div>
</template>