
<template v-if="hpi.HomePageItems[0].PersonalizedProducts.loading">
    <b-col cols="12" class="px-0">
        <div class="item-row">
            <b-col xl="4" lg="3" md="4" sm="6" cols="6">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
            <b-col xl="4" lg="3" md="4" sm="6" cols="6">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
            <b-col xl="4" lg="3" md="4" sm="6" cols="6" class="d-md-block d-none">
                <b-skeleton-img animation="fade" height="450px"></b-skeleton-img>
            </b-col>
        </div>
    </b-col>
</template>
<b-tab v-else-if="hpi.HomePageItems[0].PersonalizedProducts.items[0] !== undefined" class="section" title="@Loc["HomePage.Personalized.Products"]">
    <div id="PersonalizedProducts">
        <div class="product-grid">
            <b-col cols="12" class="px-0">
                <div class="item-row">
                    <b-col xl="3" lg="4" md="4" sm="6" cols="6" v-for="Model in hpi.HomePageItems[0].PersonalizedProducts.items.slice(0,hpi.HomePageItems[0].PersonalizedProducts.ProductsToShow)" class="product-container mb-2">
                        <partial name="_ProductBoxVue" />
                    </b-col>
                </div>
                <div class="w-100 text-center" v-if="hpi.HomePageItems[0].PersonalizedProducts.ProductsToShow >= 4">
                    <b-button class="show-more-button" variant="outline-secondary" data-nomore="@Loc["Sport.nomore.products"]" @@click="hpi.loadMore($event, hpi.HomePageItems[0].PersonalizedProducts.NumberOfProducts, hpi.HomePageItems[0].PersonalizedProducts)">Show More</b-button>
                </div>
            </b-col>
        </div>
    </div>
</b-tab>

